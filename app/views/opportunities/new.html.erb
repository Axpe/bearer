<h1>Nueva Oportunidad</h1>

<%= form_for :opportunity, url: opportunities_path do |f| %>

  <% if @opportunity.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@opportunity.errors.count, "error") %>
        prohibited this opportunity from being saved:
      </h2>
      <ul>
        <% @opportunity.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </p>

  <p>
    <%= f.label :closedate %><br>
    <%= f.date_field :closedate %>
  </p>

  <p>
    <%= f.label :stagename %><br>
    <%= select(:opportunity, :stagename, OpportunityStage.all.collect { |os| os.masterlabel }) %>
  </p>

  <p><%= f.submit %></p>
<% end %>

