<h1>Nueva Oportunidad</h1>

<%= form_for :opportunity, url: opportunities_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </p>

  <p>
    <%= f.label :closedate %><br>
    <%= f.date_field :closedate %>
  </p>

  <p>
    <%= f.label :stagename %><br>
    <%= select_tag (:opportunity, :stagename,
		 OpportunityStage.all.collect { |os| os.masterlabel }) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

