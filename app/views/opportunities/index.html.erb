<h1>Lista de oportunidades</h1>

<%= link_to new_opportunity_path, {class: "btn btn-default btn-sm "} do %>
  <span class="glyphicon glyphicon-plus"/>Nueva Oportunidad 
<% end %>

<table class="table">
  <tr>
    <th>Nombre</th>
    <th>Cantidad</th>
    <th>Fecha de Fin</th>
    <th>Estado</th>
    <th>Administración</th>
  </tr>

  <% @opportunities.each do |opportunity| %>
    <tr>
      <td><%= opportunity.name %></td>
      <td><%= opportunity.amount %></td>
      <td><%= opportunity.closedate %></td>
      <td><%= opportunity.stagename %></td>
      <td>
		  <%= link_to 'Ver', opportunity_path(opportunity) %>
          <%= link_to edit_opportunity_path(opportunity), {class: "btn btn-default btn-sm "} do %>
  			<span class="glyphicon glyphicon-edit"/>
		  <% end %>
      	  <%= link_to 'Borrar', opportunity_path(opportunity),
              method: :delete,
              data: { confirm: '¿Seguro?' } %>
	  </td>
    </tr>
  <% end %>
</table>