<!DOCTYPE html>
<html>
  <head>
    <title>Bearer</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
      	<div id="main-container" class="container">
      	  <div class="row" style='background-color: #000312;'>
        	<div class="col-xs-3">
        	  <h2 style='text-color:white;'>Axpe Bearer</h2>
			</div>
        	<div class="col-xs-9">
    			<form class="form-inline">
    			    <div class="form-group">
    			        <label class="sr-only" for="inputEmail">Email</label>
    			        <input type="email" class="form-control" id="inputEmail" placeholder="Email">
    			    </div>
    			    <div class="form-group">
    			        <label class="sr-only" for="inputPassword">Contraseña</label>
    			        <input type="password" class="form-control" id="inputPassword" placeholder="Password">
    			    </div>
    			    <div class="checkbox">
    			        <label><input type="checkbox"> Recordar</label>
    			    </div>
    			    <button type="submit" class="btn btn-primary">Acceder</button>
    			</form>	
			</div>
      	  </div>
		  <div class="row">
      	    <div class="col-xs-3">
	  			<header>
	  				<nav>
		        	    <h3>Índice</h3>
	  					<ul>
	  						<li><%= link_to 'Opportunities', opportunities_path %></li>
	  						<li><%= link_to 'Accounts', accounts_path %></li>
	  						<li><%= link_to 'Contacts', contacts_path %></li>
	  					</ul>
	  				</nav>
	  			</header>
      	    </div>
      	    <div class="col-xs-9">
      	      <%= yield %>
      	    </div>
      	  </div>
      	</div>
  </body>
</html>